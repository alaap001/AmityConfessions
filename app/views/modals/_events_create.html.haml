#events_create.modal.fade.m{'tabindex':-1 , 'role':'dialog','aria-labelledby':'aboutmodal'}
	.modal-dialog.modal-lg{'role':'document'}
		.modal-content
			= form_for @event do |f|
				- if @event.errors.any? 
					-@event.errors.full_messages.each do |message|
						.alert.alert-info
							%li= message
				= hidden_field_tag :club_id , @club.id
				= hidden_field_tag :campus , current_amitian.campus
				=render 'modals/event_form' , f: f